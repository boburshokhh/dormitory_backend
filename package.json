{
  "name": "gubkin-dormitory-backend",
  "version": "1.0.0",
  "description": "Backend API для системы управления общежитиями ГУБКИН",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "prod": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start server.js --name gubkin-backend --env production",
    "pm2:restart": "pm2 restart gubkin-backend",
    "pm2:stop": "pm2 stop gubkin-backend",
    "pm2:logs": "pm2 logs gubkin-backend",
    "test:smtp": "node test-smtp.js",
    "test:files": "node test-temporary-files.js",
    "test:files:cleanup": "node test-temporary-files.js --cleanup",
    "test:minio": "node test-minio.js",
    "test:upload": "node test-upload-api.js",
    "test:api": "node test-api-duplicates.js",
    "test:duplicates": "node test-duplicate-fix.js",
    "test:preview": "node test-photo-preview.js",
    "test:all": "npm run test:smtp && npm run test:minio && npm run test:upload && npm run test:api && npm run test:duplicates && npm run test:preview",
    "deploy:fly": "fly deploy",
    "fly:logs": "fly logs",
    "fly:status": "fly status",
    "fly:ssh": "fly ssh console"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "dormitory",
    "management",
    "api"
  ],
  "author": "GUBKIN University",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.5",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "form-data": "^4.0.3",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gubkin-university/dormitory-management.git"
  },
  "bugs": {
    "url": "https://github.com/gubkin-university/dormitory-management/issues"
  },
  "homepage": "https://github.com/gubkin-university/dormitory-management#readme"
}
